# XDG directories
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
mkdir -p "$XDG_DATA_HOME"
mkdir -p "$XDG_CONFIG_HOME"
mkdir -p "$XDG_CACHE_HOME"
if test -z "${XDG_RUNTIME_DIR}"; then
    export XDG_RUNTIME_DIR=/tmp/$(id -u $USER)-runtime-dir
    if ! test -d "${XDG_RUNTIME_DIR}"; then
        mkdir "${XDG_RUNTIME_DIR}"
        chmod 0700 "${XDG_RUNTIME_DIR}"
        touch "$XDG_RUNTIME_DIR"/Xauthority
    fi
fi

# Environment variables
export EDITOR=nvim
export BROWSER=firefox
export XKB_DEFAULT_LAYOUT=dvorak
export XAUTHORITY="$XDG_RUNTIME_DIR/Xauthority"
export LESSHISTFILE="-"
export VIMINIT=":source $XDG_CONFIG_HOME/vim/vimrc"
export NPM_CONFIG_USERCONFIG=$XDG_CONFIG_HOME/npm/npmrc
export LD_LIBRARY_PATH=/opt/OpenBLAS/lib:$LD_LIBRARY_PATH
export PASSWORD_STORE_DIR="$HOME/.local/share/password-store"
export GNUPGHOME="$HOME/.local/share/gnupg"
export DOCKER_CONFIG="$HOME/.local/share/docker"
export AWS_CONFIG_FILE="$HOME/.local/share/aws/config"
export AWS_SHARED_CREDENTIALS_FILE="$HOME/.local/share/aws/credentials"

