Section "InputClass"
    Identifier  "Touchpad"
    Driver      "libinput"
    MatchIsTouchpad "on"
    Option "Tapping" "on"
    Option "ClickMethod" "clickfinger"
    Option "DisableWhileTyping" "false"
    Option "Accel Speed" "0.4"
    Option "HorizontalScrolling" "false"
    Option "AccelProfile" "adaptive"
EndSection
